<?xml version="1.0" encoding="utf-8"?>
<app.simple.positional.decorations.padding.PaddingAwareNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/options_container_horizontal_padding"
            android:orientation="horizontal"
            android:padding="@dimen/options_container_horizontal_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/logo"
                android:text="@string/app_name"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/settings_category_text_size"
                android:textStyle="bold" />

            <app.simple.positional.decorations.ripple.DynamicRippleImageButton
                android:id="@+id/settings_button"
                android:layout_width="@dimen/app_button_size"
                android:layout_height="@dimen/app_button_size"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_settings" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:background="@color/dividerColor" />

            <app.simple.positional.decorations.ripple.DynamicRippleImageButton
                android:layout_width="@dimen/app_button_size"
                android:layout_height="@dimen/app_button_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_pin_01"
                android:transitionName="launcher_icon"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/options_container_horizontal_padding"
            android:layout_marginHorizontal="30dp"
            android:background="@color/dividerColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/options_container_horizontal_padding"
            android:fontFamily="@font/regular"
            android:padding="@dimen/options_container_horizontal_padding"
            android:text="Panels"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/info_text_primary_size" />

        <app.simple.positional.decorations.views.CustomRecyclerView
            android:id="@+id/main_list_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layoutAnimation="@anim/list_animation_controller"
            android:overScrollMode="never"
            android:paddingHorizontal="@dimen/options_container_horizontal_padding"
            app:fastScrollEnabled="false"
            app:statusBarPaddingRequired="false" />

    </LinearLayout>

</app.simple.positional.decorations.padding.PaddingAwareNestedScrollView>